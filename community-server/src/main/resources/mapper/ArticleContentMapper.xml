<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.progzhou.community.mapper.ArticleContentMapper">
    <resultMap id="articleContentResultMap" type="com.progzhou.community.entity.article.ArticleContentEntity">
        <result property="articleId" column="article_id" />
        <result property="postId" column="post_id" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>

    <select id="selectByArticleBasicInfoId" resultMap="articleContentResultMap" parameterType="string">
        select id, article_id, post_id, content, images, create_time, update_time
        from tbl_article_content
        where article_id = #{articleId}
    </select>
</mapper>